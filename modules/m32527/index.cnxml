    <m:mn>0</m:mn>
  </m:mrow>
</m:math>,
<m:math>
  <m:mrow>
    <m:mrow>
      <m:mi>v</m:mi>
    </m:mrow>
    <m:mo>/</m:mo>
    <m:mrow>
      <m:msup>
